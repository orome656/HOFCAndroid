<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_view_side_margin"
    android:layout_marginRight="@dimen/card_view_side_margin"
    tools:context="com.hofc.hofc.Accueil$PlaceholderFragment">
    <ListView
        android:id="@+id/actus_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:scrollbars="none">

    </ListView>

</android.support.v4.widget.SwipeRefreshLayout>