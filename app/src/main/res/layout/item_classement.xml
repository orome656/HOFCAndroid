<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/classement_position"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_nom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="7"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_points"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_joue"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_victoire"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_nul"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_defaite"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_bp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_bc"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/classement_diff"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="10"
        android:gravity="center_vertical"/>
</LinearLayout>
